<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ServletProject01</display-name>
 <!-- person -->
 <servlet>
  	<servlet-name>PersonServlet</servlet-name>
  	<servlet-class>com.controller.PersonServlet</servlet-class>
 </servlet>
    
 <servlet-mapping>
    <servlet-name>PersonServlet</servlet-name>
    <url-pattern>/exam/person</url-pattern> <!-- 경로 주의 -->
 </servlet-mapping>
 
 
 
 <!-- info -->
  <servlet>
  	<servlet-name>InfoServlet</servlet-name>
  	<servlet-class>com.controller.InfoServlet</servlet-class>
    </servlet>
    
  <servlet-mapping>
    <servlet-name>InfoServlet</servlet-name>
    <url-pattern>/exam/infor.go</url-pattern> <!-- 경로 주의 -->
  </servlet-mapping>
 
 
  <!-- bbs -->
  <servlet>
  	<servlet-name>BbsServlet</servlet-name>
  	<servlet-class>com.controller.BbsServlet</servlet-class>
    </servlet>
    
  <servlet-mapping>
    <servlet-name>BbsServlet</servlet-name>
    <url-pattern>/bbs</url-pattern>
  </servlet-mapping>
  
  
  <!--  adder -->
  <servlet>
  	<servlet-name>AdderServlet</servlet-name>
  	<servlet-class>com.controller.AdderServlet</servlet-class>
  </servlet>
  
   <servlet-mapping>
   	<servlet-name>AdderServlet</servlet-name>
   	<url-pattern>/addResult.do</url-pattern> <!-- 넘어가는 주소 -->
   </servlet-mapping>
   
   
  <welcome-file-list>
